<ul class="votes">
    <% board_members.each do |bm| %>
        <li>
            <div class="thumb"><%= image_tag "http://dummyimage.com/75x75/000000/fff" %></div>
            <p><strong><%= link_to [bm.full_name, bm.board_position].reject(&:blank?).join(', ') , board_path(bm) %></strong></p>
            <p class="mute"><%= [bm.job_title, bm.organization].reject(&:blank?).join(', ') %></p>
        </li>
    <% end %>
</ul>
