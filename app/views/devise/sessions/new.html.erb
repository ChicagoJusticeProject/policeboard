<div class="content-box">
    <% title "Sign in" %>
    
    <div id="signin">
        <h1>Sign in</h1>
        
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <p><%= f.email_field :email, autofocus: true, :placeholder => "Email...", :class => "txt" %></p>
            <p><%= f.password_field :password, autocomplete: "off", :placeholder => "Password...", :class => "txt" %></p>
            
            <% if devise_mapping.rememberable? -%>
                <p><%= f.check_box :remember_me %> <%= f.label :remember_me %></p>
            <% end -%>
            
            <p><%= f.submit "Sign in", :class => "action" %></p>
        <% end %>
    
        <%= render "devise/shared/links" %>
    </div>
</div>